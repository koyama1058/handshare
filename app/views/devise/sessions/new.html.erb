<%= render 'shared/header'%>
<body class="text-center">

  <div class="row justify-content-around">
    <div class="col-xs-10  col-md-8 shadow p-3 bg-white ">
      <h1 class="h3 m-3 font-weight-normal pt-4">ログイン情報入力</h1>
        <%=link_to  "新規登録へ", new_user_registration_path%>

      <%= form_with model: @user, url: user_session_path, class: 'registration-main contain pt-5 pr-5 pl-5', local: true do |f| %>

        <div class="input-group mb-3">
          <%= f.label :email, class:"input-group mb-3" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "email"  %>
        </div>

        <div class="input-group mb-3">
          <%= f.label :password, class:"input-group mb-3" %><br />
          <%= f.text_field :password, autofocus: true, autocomplete: "current-password", class:"form-control", placeholder: "password"  %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary btn-lg mt-4"%>
        </div>

      <% end %>

    </div>
  </div>
</body>
